<resources>

    <!-- Base application theme. -->
    <style name="standartTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HijackTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/HijackThemeButton</item>

    </style>

    <style name="HijackThemeButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/hbutton</item>
    </style>

    <style name="Chess_Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:clickable">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#8E402A</item>
    </style>

    <style name="Chess_White">
        <item name="android:background">@color/sadroseblackdeadangelwhite</item>
        <item name="android:tag">img</item>
        <item name="android:onClick">click</item>
    </style>

    <style name="Chess_Black">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sadroseblackdeadangelblack</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tag">img</item>
        <item name="android:onClick">click</item>
    </style>
</resources>
